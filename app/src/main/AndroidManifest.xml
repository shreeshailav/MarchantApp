        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        >

        <activity android:name=".viewactivity.RedeemActivity" android:screenOrientation="portrait"/>
        <activity android:name=".viewactivity.LoginActivity" android:screenOrientation="portrait"/>
        <activity android:name=".viewactivity.QRCodeScannerActivity" android:screenOrientation="portrait"/>
        <activity android:name=".viewactivity.QRCodeGeneratorActivity" android:screenOrientation="portrait"/>
        <activity android:name=".viewactivity.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


