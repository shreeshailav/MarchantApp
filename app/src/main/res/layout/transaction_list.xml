<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="position"
            type="java.lang.Integer" />

        <variable
            name="viewModel"
            type="com.hashedin.marchantapp.viewmodel.TransactionViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="5dp"
        android:onClick="@{() -> viewModel.onItemClick(position)}"
        android:background="@color/white">



<!--        android:onClick="@{() -> viewModel.onItemClick(position)}"-->



<!--        <TextView-->
<!--            android:id="@+id/txtName"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:gravity="center_vertical"-->
<!--            android:orientation="vertical"-->
<!--            android:paddingStart="32dp"-->
<!--            android:paddingEnd="32dp"-->
<!--            android:text="@{viewModel.getDogBreedAt(position).breed}"-->
<!--            android:textSize="16dp"-->
<!--            tools:text="Test" />-->


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_group_listview_icon"

            />

        <LinearLayout
            android:id="@+id/transaction_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/transactiontype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="@{viewModel.getDogBreedAt(position).breed}"

                android:textColor="#5a328b"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction ID : 4082491038"
                android:textColor="#474a5f"/>
        </LinearLayout>

        <TextView
            android:id="@+id/updatedtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:text="32min ago"
            android:textColor="#c7c7c7"
            android:layout_alignTop="@+id/mmk"
            />





            <TextView
                android:id="@+id/total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total amount   356"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/rewardpoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/transaction_layout1"
                android:text="Reward points 200"
                android:textColor="#b4b4b4"/>

            <TextView
                android:id="@+id/mmk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rewardpoints"
                android:textColor="#b4b4b4"
                android:text="MMK 156"/>



    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>