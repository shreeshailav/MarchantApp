<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="position"
            type="java.lang.Integer" />

        <variable
            name="viewModel"
            type="com.hashedin.marchantapp.viewmodel.TransactionViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@color/white">

<!--        android:onClick="@{() -> viewModel.onItemClick(position)}"-->



<!--        <TextView-->
<!--            android:id="@+id/txtName"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:gravity="center_vertical"-->
<!--            android:orientation="vertical"-->
<!--            android:paddingStart="32dp"-->
<!--            android:paddingEnd="32dp"-->
<!--            android:text="@{viewModel.getDogBreedAt(position).breed}"-->
<!--            android:textSize="16dp"-->
<!--            tools:text="Test" />-->


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_transaction_history"
            android:layout_alignBottom="@+id/transaction_layout1"
            android:layout_alignTop="@+id/transaction_layout1"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/updatedtime"


            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:id="@+id/transaction_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/transactiontype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Received from"
                android:textColor="@color/text_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction ID : "/>
        </LinearLayout>

        <TextView
            android:id="@+id/updatedtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:text="30min ago"
            android:layout_alignTop="@+id/mmk"
            />





            <TextView
                android:id="@+id/total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Received from"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/rewardpoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/transaction_layout1"
                android:text="Total amount "/>

            <TextView
                android:id="@+id/mmk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rewardpoints"
                android:text="MMK "/>


    </RelativeLayout>
</layout>