<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pattern"
        tools:context=".viewactivity.RedeemActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pattern"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                 >


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@drawable/ic_header_bg"
                            android:layout_weight="1">


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/backimage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/ic_close"
                                android:layout_alignParentRight="true"
                                android:layout_margin="10dp"

                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="bottom|center">



                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profilimage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/profile_icon"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />

                        <LinearLayout
                            android:id="@+id/profil_name_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_below="@+id/profilimage"
                             >
                            <TextView
                                android:id="@+id/profile_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NAME"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:textColor="@color/button_text_color"
                                android:gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit Profile"
                                android:padding="5dp"
                                android:textColor="@color/button_text_color"
                                android:background="@drawable/button_edit_profile"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/circle"
                            android:layout_above="@+id/profil_name_layout"
                            android:padding="10dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_camera_action"
                                app:civ_circle_background_color="#b4b4b4"
                                app:civ_border_color="@android:color/transparent"

                                />

                        </LinearLayout>





                    </RelativeLayout>




                </FrameLayout>






            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                     >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"


                        android:orientation="vertical">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardPreventCornerOverlap="true"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentEnd="true"
                                        app:srcCompat="@drawable/ic_action_right_arrow"/>


                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:theme="@style/EditTextTheme" >

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/edit_change_number"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/change_number"
                                            android:singleLine="true"
                                            android:imeOptions="actionDone"
                                            android:text="+95 98765432100"
                                            android:textColor="@color/text_color"
                                            android:padding="5dp"
                                            android:theme="@style/EditTextTheme_transparent"/>
                                    </com.google.android.material.textfield.TextInputLayout>



                                </RelativeLayout>





                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardPreventCornerOverlap="true"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentEnd="true"
                                        app:srcCompat="@drawable/ic_action_right_arrow"/>


                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:theme="@style/EditTextTheme" >

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/edit_change_password"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/change_password"
                                            android:singleLine="true"
                                            android:text="xxxxxxxxx"
                                            android:inputType="textPassword"
                                            android:imeOptions="actionDone"
                                            android:textColor="@color/text_color"
                                            android:padding="5dp"
                                            android:theme="@style/EditTextTheme_transparent"/>
                                    </com.google.android.material.textfield.TextInputLayout>



                                </RelativeLayout>





                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardPreventCornerOverlap="true"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentEnd="true"
                                        app:srcCompat="@drawable/ic_action_right_arrow"/>


                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:theme="@style/EditTextTheme">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/edit_change_language"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/change_language"
                                            android:singleLine="true"
                                            android:imeOptions="actionDone"
                                            android:text="@string/english"
                                            android:textColor="@color/text_color"
                                            android:padding="5dp"
                                            android:theme="@style/EditTextTheme_transparent"/>
                                    </com.google.android.material.textfield.TextInputLayout>



                                </RelativeLayout>





                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardPreventCornerOverlap="true"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentEnd="true"
                                        app:srcCompat="@drawable/ic_action_right_arrow"/>


                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:theme="@style/EditTextTheme"

                                        >

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/edit_change_text_size"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/text_size"
                                            android:singleLine="true"
                                            android:imeOptions="actionDone"
                                            android:textColor="@color/text_color"
                                            android:padding="5dp"
                                            android:text="@string/medium"
                                            android:theme="@style/EditTextTheme_transparent"/>
                                    </com.google.android.material.textfield.TextInputLayout>



                                </RelativeLayout>





                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardPreventCornerOverlap="true"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="10dp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/signoutbtn"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="SIGN OUT"
                                        android:textColor="#e56075"

                                        />


                                </LinearLayout>





                            </LinearLayout>
                        </androidx.cardview.widget.CardView>








                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>